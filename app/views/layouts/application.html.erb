      </ul>
    </nav>
  </header>
</section>

<section id="main-page">
  <section id="main-content" class="<%= params[:full] ? "full-page" : "two-column" %>">
    <section id="main">
      <%= yield %>
    </section>
    <section id="sidebar">
      <div id="sidebar-content">
        Sidebar!
      </div>
    </section>
  </section>
</section>

<section id="footer-page">
  <footer>
    <section class="links">
      <ul>
        <li><%= link_to "The more links", "#" %></li>
