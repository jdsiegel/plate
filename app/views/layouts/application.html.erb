  <title>Plate</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <meta name="description" content="A template app as a base-line for my future projects" />
  <meta name="keywords" content="template, rails, compass, css, susy, fluid, fixed width, elastic, html5, css3, grid system, grid framework" />

  <%= csrf_meta_tag %>

