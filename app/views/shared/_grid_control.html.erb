<div class="grid-control">
  <%= link_to "Show Grid", "#", :id => "show-grid" %>
  <%= link_to "Hide Grid", "#", :id => "hide-grid", :class => "hidden" %>
</div>

<% content_for :page_scripts do -%>
  <script type="text/javascript">
    $(document).ready(function() {
      $("#.grid-control a").click(function() {
        $(".grid-control a").toggleClass("hidden");
        $("header, #main-content, footer, #dialog-container").toggleClass("show-grid");
        return false;
      });
    });
  </script>
<% end -%>
